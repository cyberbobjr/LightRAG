{
  "name": "LightRAG",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    9622
  ],
  "runArgs": [
    "--gpus",
    "all",
    "-p",
    "9622:9621",
    "--network=devcontainers-net:allow_host_loopback=true",
    "--name=LightRAG",
    "--add-host=host.containers.internal:host-gateway"  // Ajoutez cette ligne pour Podman
  ],
  "mounts": [
    "source=${localWorkspaceFolder}/.bash_history,target=/root/.bash_history,type=bind"
  ],
  "remoteUser": "root",
  "postCreateCommand": "git config --global --add safe.directory /workspaces/LightRAG",
  "postStartCommand": "",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.debugpy",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.vscode-python-envs",
        "KevinRose.vsc-python-indent",
        "openai.chatgpt",
        "Bar.python-import-helper"
      ]
    }
  }
}